# =============================================================================
# Alithia Research Agent Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# 
# This configuration supports multiple research agents:
# - arxrec: ArXiv paper recommendation agent
# - lens: Research lens/filtering agent (future)
# - vigil: Research monitoring agent (future)
# =============================================================================

# =============================================================================
# CORE RESEARCH DATA SOURCES
# =============================================================================

# Zotero Configuration (Required for all agents)
# Get these from https://www.zotero.org/settings/keys
ALITHIA_ZOTERO_ID=your_zotero_user_id_here
ALITHIA_ZOTERO_KEY=your_zotero_api_key_here

# Zotero Collections to Ignore (gitignore-style patterns, comma-separated)
# Leave empty or comment out to process all collections
ALITHIA_ZOTERO_IGNORE=

# =============================================================================
# COMMUNICATION & NOTIFICATIONS
# =============================================================================

# SMTP Configuration for Email Delivery (Required for all agents)
ALITHIA_SMTP_SERVER=smtp.gmail.com
ALITHIA_SMTP_PORT=587
ALITHIA_SENDER=your_email@gmail.com
ALITHIA_SENDER_PASSWORD=your_app_password_here
ALITHIA_RECEIVER=recipient@example.com

# Email Behavior
ALITHIA_SEND_EMPTY=false  # Send email even when no papers are found

# User Email Address
ALITHIA_EMAIL=your_email@example.com

# =============================================================================
# AI/LLM CONFIGURATION
# =============================================================================

# OpenAI Configuration (Required for content generation)
ALITHIA_OPENAI_API_KEY=your_openai_api_key_here
ALITHIA_OPENAI_API_BASE=https://api.openai.com/v1
ALITHIA_MODEL_NAME=gpt-4o

# Language for generated content
ALITHIA_LANGUAGE=English

# =============================================================================
# RESEARCHER PROFILE
# =============================================================================

# Research Interests (comma-separated list)
ALITHIA_RESEARCH_INTERESTS=AI,Machine Learning,Computer Vision

# Expertise Level (beginner, intermediate, advanced)
ALITHIA_EXPERTISE_LEVEL=intermediate

# =============================================================================
# ARXREC AGENT CONFIGURATION
# =============================================================================

# Paper Limits and Query
ALITHIA_MAX_PAPER_NUM=50

# ArXiv search query (default: AI, Computer Vision, Machine Learning, NLP)
# Format: category1+category2+category3
# Examples: cs.AI+cs.CV+cs.LG+cs.CL, cs.AI+cs.LG, cs.CV+cs.CG
ALITHIA_ARXIV_QUERY=cs.AI+cs.CV+cs.LG+cs.CL

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Enable debug mode for development
ALITHIA_DEBUG=false

# =============================================================================
# OPTIONAL: VECTOR STORE CONFIGURATION (Future)
# =============================================================================

# Pinecone Vector Database (for advanced similarity search)
# ALITHIA_PINECONE_API_KEY=your_pinecone_api_key
# ALITHIA_PINECONE_ENVIRONMENT=us-west1-gcp
# ALITHIA_PINECONE_INDEX_NAME=alithia-papers

# Supabase Database (for paper storage and metadata)
# ALITHIA_SUPABASE_URL=your_supabase_url
# ALITHIA_SUPABASE_KEY=your_supabase_anon_key